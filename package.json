{
  "name": "AFK",
  "description": "The missing screen saver shortcut for macOS",
  "version": "1.3.0",
  "author": "Jamie Weavis <jamie.weavis@gmail.com>",
  "bugs": {
    "url": "https://github.com/jamieweavis/afk/issues"
  },
  "build": {
    "asarUnpack": "src/applescript/*.applescript"
  },
  "dependencies": {
    "applescript": "^1.0.0",
    "auto-launch": "^5.0.1",
    "electron-is-accelerator": "^0.1.2",
    "electron-store": "^2.0.0",
    "jquery": "^3.1.1"
  },
  "devDependencies": {
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4"
  },
  "homepage": "https://github.com/jamieweavis/afk#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "afk",
    "app",
    "electron",
    "hotkey",
    "lock",
    "macos",
    "menubar",
    "screensaver",
    "shortcut",
    "sleep"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/afk.git"
  },
  "scripts": {
    "dist": "build",
    "lint": "eslint .",
    "pack": "build --dir",
    "start": "electron src/main.js"
  }
}
